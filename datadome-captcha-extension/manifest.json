{
    "manifest_version": 3,
    "name": "XHR Response Saver",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "webNavigation",
      "storage",
      "downloads",
      "cookies",
      "scripting",
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["*://*/*"]
}